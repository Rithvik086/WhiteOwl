{
  "compilerOptions": {
    "target": "ES6", // Specify ECMAScript version target
    "module": "commonjs", // Specify the module system
    "allowJs": true, // Allow JavaScript files to be compiled
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory for input files (source files)
    "esModuleInterop": true, // Interoperability for CommonJS and ES modules
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true
  },
  "include": ["server.js"],
  "exclude": ["node_modules"]
}
